					</If>
					<If Condition="not IsOnMap(133)">
						<GetTo ZoneId="133" XYZ="29.11956, 8.114757, -101.8751"/>
					</If>
					<Log Color="&LogColor;" Name="All Saints' Wake" Message="Turning in the In a Manor of Spooking quest!"/>
